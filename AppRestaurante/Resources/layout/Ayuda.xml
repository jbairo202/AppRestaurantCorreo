<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <ImageView
        android:src="@android:drawable/ic_menu_help"
        android:layout_width="match_parent"
        android:layout_height="142.5dp" />

    <TextView
        android:text="Help"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtviewRegistrar" />
    
    <EditText
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre" />
    <EditText
        android:hint="Surnames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtApellidos" />
    <EditText
        android:hint="Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTelefono" />

    <EditText
        android:hint="Escribe tu solicitud aqui."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMensaje" />
    

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1" />

    <Button
        android:text="Enviar Formulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviarFormulario"
        android:onClick="BtnEnviarFormulario_Click"
        android:layout_marginLeft="0.0dp" />

    <Button
        android:text="Regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0.0dp"
        android:id="@+id/btnVolver"
        android:onClick="BtnVolver_Click"/>

</LinearLayout>
